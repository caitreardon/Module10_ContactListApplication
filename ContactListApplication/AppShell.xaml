<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ContactListApplication.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ContactListApplication.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Add Contact">
            <ShellContent
                ContentTemplate="{DataTemplate views:AddContactPage}"
                Route="AddContactPage" />
        </Tab>
        <Tab Title="Contacts">
            <ShellContent
                ContentTemplate="{DataTemplate views:ContactsPage}"
                Route="ContactsPage" />
        </Tab>
    </TabBar>

</Shell>